{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "ESM",

  "compilerOptions": {
    "outDir": "./",
    "moduleResolution": "node",
    "target": "es2017",
    "importsNotUsedAsValues": "error",
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
